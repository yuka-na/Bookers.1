<h1>Editing Book</h1>
<div class="edit">
	<%= form_for(@book) do |f| %>
    <h4 class="edit1">Title</h4>
    <%= f.text_field :title,class:"book_title" %>
    <h4 class="edit1">Body</h4>
    <%= f.text_area :body,class:"book_body" %><br><br>
    <%= f.submit 'Update Book' %>
<% end %>
<br>
<h5><%= link_to "Show", book_path(@book.id),class: "show_#{book.id}" %>|<%= link_to "Back", new_book_path(@book.id),class: "new_#{book.id}" %></h5>
</div>