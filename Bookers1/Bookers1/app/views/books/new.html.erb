<% if flash[:notice] %>
  <p class="success"><%= flash[:notice] %></p>
<% end %>
<div class="new1"><h1 class="tops1">Books</h1>
<div class="list">
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	<% @books.each do |book| %>

		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show", book_path(book.id),class: "show_#{book.id}" %></td>
			<td><%= link_to "edit", edit_book_path(book.id),class: "edit_#{book.id}" %></td>
			<td><%= link_to "destroy", book_path(book.id), method: :delete,data: {confirm: "you sure?"},class: "destroy_#{book.id}" %></td>
		</tr>
		<% end %>
	</table>

</div>
<div class="news">
	<h2 class="tops2">New books</h2>
	<%= form_for(@book) do |f| %>
 
    <h4 class="form">Title</h4>
    <%= f.text_field :title,class: "book_title" %>
    <h4 class="form">Body</h4>
    <%= f.text_area :body,class: "book_body" %><br>
    <%= f.submit 'Create Book' %>
 
<% end %>
</div>
</div>